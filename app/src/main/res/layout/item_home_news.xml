<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.adapter.CopyAdapter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_home_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_home_item"
            android:orientation="vertical">

            <TextView
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是常绿藤本植物，原生长在热带地区绿萝是常绿藤本植物，原生长在热带地区绿萝是常绿藤本植物，原生长在热带地区"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/tv_home_name"
                android:id="@+id/tv_home_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="绿萝"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-20dp"
        android:singleLine="true"
        android:text="藤本植物"
        android:textColor="#666666"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#ececec" />
</LinearLayout>